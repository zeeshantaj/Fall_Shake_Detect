<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="4dp"
    android:elevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/linear_bg">

        <TextView
            android:id="@+id/detect_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="shake detected"
            android:textSize="18sp"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/detect_item_acceleration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="acceleration 42.4422"
            android:textSize="18sp"
            android:padding="4dp"
            app:layout_constraintStart_toStartOf="@+id/detect_item_title"
            app:layout_constraintTop_toBottomOf="@+id/detect_item_title" />

        <TextView
            android:id="@+id/detect_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/12/1211 12:32:33:pm"
            android:textSize="14sp"
            android:padding="3dp"
            app:layout_constraintStart_toStartOf="@+id/detect_item_acceleration"
            app:layout_constraintTop_toBottomOf="@+id/detect_item_acceleration" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>